worker_processes auto;

pid logs/nginx.pid;

events {
    worker_connections 1024;
}

http {
    include mime.types;


    upstream nodejs_cluster {
        least_conn;
        server 192.168.1.5:3001;
        server 192.168.1.5:3002;
        server 192.168.1.5:3003;
    }

    server {
        #listen 8080; #http
        listen 443 ssl; #https
        server_name localhost;

        ssl_certificate C:\\Users\\LENOVO\\Desktop\\nginx-cert\\nginx-selfsigned.crt;
        ssl_certificate_key C:\\Users\\LENOVO\\Desktop\\nginx-cert\\nginx-selfsigned.key;

        location / {
            proxy_pass http://nodejs_cluster;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            
        }
    }

    # redirect from port 8080 to port 443
